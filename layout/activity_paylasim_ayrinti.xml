<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b6"
    tools:context=".aktivitiler.activity_paylasim_ayrinti">
    <TextView
        android:id="@+id/lbl_paylasim_ayrinti_kullanici"
        android:layout_width="169dp"
        android:layout_height="52dp"
        android:layout_margin="2dp"
        android:inputType="textMultiLine"
        android:text="Kullanıcı Adı"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_paylasim_ayrinti_profilresim"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/img_paylasim_ayrinti_profilresim"
        app:layout_constraintTop_toBottomOf="@+id/img_paylasim_ayrinti_profilresim" />
    <ImageView
        android:id="@+id/img_paylasim_ayrinti_kapak_foto"
        android:layout_width="186dp"
        android:layout_height="241dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/loading" />
    <TextView
        android:id="@+id/lbl_paylasim_ayrinti_baslik"
        android:layout_width="347dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:inputType="textMultiLine"
        android:scrollbars="horizontal|vertical"
        android:text="Baslık"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="@+id/img_paylasim_ayrinti_kapak_foto"
        app:layout_constraintTop_toBottomOf="@+id/img_paylasim_ayrinti_kapak_foto" />
    <TextView
        android:id="@+id/lbl_paylasim_ayrinti_aciklama"
        android:layout_width="326dp"
        android:layout_height="86dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:inputType="textMultiLine"
        android:scrollbars="horizontal|vertical"
        android:text="Açıklama"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/lbl_paylasim_ayrinti_baslik"
        app:layout_constraintTop_toBottomOf="@+id/lbl_paylasim_ayrinti_baslik" />
    <TextView
        android:id="@+id/lbl_paylasim_ayrinti_kosullar"
        android:layout_width="326dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:inputType="textMultiLine"
        android:maxLength="150"
        android:scrollbars="horizontal|vertical"
        android:text="Koşullar"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="@+id/lbl_paylasim_ayrinti_baslik"
        app:layout_constraintTop_toBottomOf="@+id/lbl_paylasim_ayrinti_aciklama" />
    <Button
        android:id="@+id/btn_paylasim_yeri_istekgonder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="İSTEK GÖNDER"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/img_paylasim_ayrinti_kapak_foto"
        app:layout_constraintTop_toTopOf="@+id/img_paylasim_ayrinti_kapak_foto" />
    <Button
        android:id="@+id/btn_paylasim_yeri_indirmelbuton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="İNDİR"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/img_paylasim_ayrinti_kapak_foto"
        app:layout_constraintTop_toTopOf="@+id/img_paylasim_ayrinti_kapak_foto" />
    <ImageView
        android:id="@+id/img_paylasim_ayrinti_profilresim"
        android:layout_width="78dp"
        android:layout_height="98dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_paylasim_ayrinti_kapak_foto"
        app:layout_constraintTop_toBottomOf="@+id/btn_paylasim_yeri_indirmelbuton"
        app:srcCompat="@drawable/ic_action_user" />
</android.support.constraint.ConstraintLayout>