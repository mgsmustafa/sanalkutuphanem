<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b6"
    tools:context=".aktivitiler.Paylasma_activity">
    <TextView
        android:id="@+id/textView22"
        android:layout_width="357dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="* Yukarıdaki buton ile sadece E-döküman ve dosyalar içindir(pdf, jpg, png, rar) !"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_paylasma_dokumanyukle" />
    <EditText
        android:id="@+id/txt_paylasma_kosullar"
        android:layout_width="340dp"
        android:layout_height="63dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:gravity="top|left"
        android:hint="Varsa Döküman / Kitap Paylaşım Koşulları "
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_paylasma_dokuman_adi" />
    <EditText
        android:id="@+id/txt_paylasma_dokuman_adi"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:hint="Döküman / Kitap adını giriniz"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_paylasma_fotoyukle" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Kitap / Döküman  Kapak Fotoğrafı Yükle"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />
    <ImageView
        android:id="@+id/btn_paylasma_fotoyukle"
        android:layout_width="137dp"
        android:layout_height="117dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/ic_camera_alt" />
    <EditText
        android:id="@+id/txt_paylasma_dokuman_yorumaciklama"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:gravity="top|left"
        android:hint="Döküman / Kitap hakkındaki özet veya yorumlarınız..."
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_paylasma_kosullar" />
    <Button
        android:id="@+id/btn_paylasma_yukle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Yükle"
        app:layout_constraintEnd_toStartOf="@+id/btn_paylasma_vazgec"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/txt_paylasma_dokuman_yorumaciklama"
        app:layout_constraintTop_toBottomOf="@+id/txt_paylasma_dokuman_yorumaciklama" />
    <Button
        android:id="@+id/btn_paylasma_vazgec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Vazgeç"
        app:layout_constraintEnd_toEndOf="@+id/txt_paylasma_dokuman_yorumaciklama"
        app:layout_constraintStart_toEndOf="@+id/btn_paylasma_yukle"
        app:layout_constraintTop_toBottomOf="@+id/txt_paylasma_dokuman_yorumaciklama" />
    <ProgressBar
        android:id="@+id/progressBar_paylasma_prog1"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/txt_paylasma_dokuman_yorumaciklama"
        app:layout_constraintEnd_toEndOf="@+id/txt_paylasma_dokuman_yorumaciklama"
        app:layout_constraintStart_toStartOf="@+id/txt_paylasma_dokuman_yorumaciklama"
        app:layout_constraintTop_toTopOf="@+id/txt_paylasma_dokuman_yorumaciklama" />
    <Button
        android:id="@+id/btn_paylasma_dokumanyukle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Döküman Yükle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/switch_paylasma_activitiy_kitap_dokuman"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="*"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_paylasma_fotoyukle"
        app:layout_constraintTop_toTopOf="@+id/btn_paylasma_fotoyukle" />
    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="*"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_paylasma_dokuman_adi"
        app:layout_constraintEnd_toStartOf="@+id/txt_paylasma_dokuman_adi"
        app:layout_constraintTop_toTopOf="@+id/txt_paylasma_dokuman_adi" />
    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="*"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/progressBar_paylasma_prog1"
        app:layout_constraintEnd_toStartOf="@+id/txt_paylasma_dokuman_yorumaciklama"
        app:layout_constraintTop_toTopOf="@+id/progressBar_paylasma_prog1" />
    <Switch
        android:id="@+id/switch_paylasma_activitiy_kitap_dokuman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="Döküman Paylaş"
        android:textColorLink="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/btn_paylasma_dokumanyukle"
        app:layout_constraintEnd_toStartOf="@+id/btn_paylasma_dokumanyukle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_paylasma_dokumanyukle"
        app:layout_constraintVertical_bias="0.846" />
</android.support.constraint.ConstraintLayout>