<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_google_signin_btn_text_light_focused"
        android:backgroundTint="@android:color/transparent">
        <ImageView
            android:id="@+id/img_paylastiklarim_kapak"
            android:layout_width="74dp"
            android:layout_height="86dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@android:drawable/ic_menu_report_image" />
        <TextView
            android:id="@+id/lb2323e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Paylaşım Bilgileri:"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toEndOf="@+id/img_paylastiklarim_kapak"
            app:layout_constraintTop_toTopOf="@+id/img_paylastiklarim_kapak" />
        <ImageView
            android:id="@+id/btn_paylastiklarim_sil"
            android:layout_width="45dp"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:tint="@color/colorRed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_action_trash" />
        <TextView
            android:id="@+id/lbl_paylastiklarim_paylasim_adi"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:text="Paylaşım Bilgileri"
            app:layout_constraintEnd_toStartOf="@+id/btn_paylastiklarim_sil"
            app:layout_constraintStart_toStartOf="@+id/lb2323e"
            app:layout_constraintTop_toBottomOf="@+id/lb2323e" />
        <Button
            android:id="@+id/btn_paylastiklarim_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Dosya Bağlantısı"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/lbl_paylastiklarim_paylasim_adi"
            app:layout_constraintTop_toBottomOf="@+id/lbl_paylastiklarim_paylasim_adi" />
    </android.support.constraint.ConstraintLayout>
</android.support.design.card.MaterialCardView>