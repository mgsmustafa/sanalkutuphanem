<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b6"
    tools:context=".aktivitiler.Activity_profilim">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_profil_kuladi"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_action_user" />
    <EditText
        android:id="@+id/txt_profil_kuladi"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Kullanıcı adı"
        android:inputType="textPersonName"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_profil_email"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_email" />
    <EditText
        android:id="@+id/txt_profil_email"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="E-posta"
        android:inputType="textEmailAddress"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/txt_profil_kuladi" />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_profil_sifre"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_action_key" />
    <EditText
        android:id="@+id/txt_profil_sifre"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Şuanki şifreniz"
        android:inputType="textPassword"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/txt_profil_email" />
    <EditText
        android:id="@+id/txt_profil_adisoyadi"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="8dp"
        android:editable="false"
        android:ems="10"
        android:hint="Adınızı ve Soyadınızı giriniz"
        android:inputType="textPersonName"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_profil_sifre" />
    <ImageView
        android:id="@+id/img_profil_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_action_user" />
    <Button
        android:id="@+id/btn_profilim_vazgec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Vazgeç"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_profilim_sifre_degistir"
        app:layout_constraintTop_toBottomOf="@+id/txt_profil_adisoyadi" />
    <Button
        android:id="@+id/btn_profilim_kaydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Bilgileri Güncelle"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_profilim_sifre_degistir"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_profil_adisoyadi" />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/lay_profilim_alt"
        android:layout_width="368dp"
        android:layout_height="239dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_profilim_kaydet">
        <EditText
            android:id="@+id/txt_profil_yeni_sifre2"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:hint="Yeni şifrenizi tekrar giriniz..."
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_profil_yeni_sifre1" />
        <EditText
            android:id="@+id/txt_profil_yeni_sifre1"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:hint="Yeni şifrenizi giriniz..."
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_profilim_sifre_degistirme" />
        <Button
            android:id="@+id/btn_profilim_alt_degistir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Güncelle"
            app:layout_constraintStart_toStartOf="@+id/txt_profil_yeni_sifre2"
            app:layout_constraintTop_toBottomOf="@+id/txt_profil_yeni_sifre2" />
        <TextView
            android:id="@+id/lbl_profilim_sifre_degistirme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Şifre Değiştirme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/btn_profilim__altvazgec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Vazgeç"
            app:layout_constraintEnd_toEndOf="@+id/txt_profil_yeni_sifre2"
            app:layout_constraintStart_toEndOf="@+id/btn_profilim_alt_degistir"
            app:layout_constraintTop_toBottomOf="@+id/txt_profil_yeni_sifre2" />
    </android.support.constraint.ConstraintLayout>
    <Button
        android:id="@+id/btn_profilim_sifre_degistir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Şifre Değiştir"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_profilim_vazgec"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_profilim_kaydet"
        app:layout_constraintTop_toBottomOf="@+id/txt_profil_adisoyadi" />
    <TextView
        android:id="@+id/lbl_profil_puan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/img_profil_icon"
        app:layout_constraintStart_toStartOf="@+id/img_profil_icon"
        app:layout_constraintTop_toBottomOf="@+id/img_profil_icon" />
</android.support.constraint.ConstraintLayout>