<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/arkaplan1">
        <ImageView
            android:id="@+id/img_teksatir"
            android:layout_width="147dp"
            android:layout_height="181dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.132"
            app:srcCompat="@drawable/loading" />
        <TextView
            android:id="@+id/lbl_tek_satir_kitap_baslik"
            android:layout_width="198dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:inputType="textMultiLine"
            android:maxLength="40"
            android:padding="2dp"
            android:scrollbars="vertical"
            android:text="BURAYA BASLIK GELECEK"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/img_teksatir" />
        <TextView
            android:id="@+id/lbl_tek_satir_kitap_tarih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:maxLength="50"
            android:padding="2dp"
            android:text="BURAYA TARİH GELECEK"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/lbl_tek_satir_kitap_aciklama" />
        <TextView
            android:id="@+id/lbl_tek_satir_musaitmi"
            android:layout_width="208dp"
            android:layout_height="19dp"
            android:maxLength="50"
            android:padding="2dp"
            android:text="BURAYA MÜSAİTLİK DURUMU  GELECEK"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/lbl_tek_satir_kitap_tarih"
            app:layout_constraintTop_toBottomOf="@+id/lbl_tek_satir_kitap_tarih" />
        <TextView
            android:id="@+id/lbl_tek_satir_kitap_aciklama"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:autoText="true"
            android:inputType="textMultiLine"
            android:maxLength="120"
            android:padding="2dp"
            android:scrollbars="vertical"
            android:text="BURAYA AÇIKLAMA GELECEK"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@+id/img_teksatir"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/lbl_tek_satir_kitap_baslik"
            app:layout_constraintVertical_bias="0.0" />
        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="161dp" />
        <TextView
            android:id="@+id/lbl_teksatir_kayitbulunmadi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Aradığınız paylaşım bulunamadı !"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.423"
            app:layout_constraintStart_toStartOf="@+id/img_teksatir"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/lbl_anasayfa_kullanici_adi"
            android:layout_width="170dp"
            android:layout_height="21dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="3dp"
            android:maxLength="20"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_anasayfa_kucukprofil"
            app:layout_constraintTop_toBottomOf="@+id/lbl_tek_satir_musaitmi" />
        <ImageView
            android:id="@+id/img_anasayfa_kucukprofil"
            android:layout_width="23dp"
            android:layout_height="22dp"
            app:layout_constraintStart_toStartOf="@+id/lbl_tek_satir_musaitmi"
            app:layout_constraintTop_toTopOf="@+id/lbl_anasayfa_kullanici_adi"
            app:srcCompat="@drawable/ic_action_user" />
    </android.support.constraint.ConstraintLayout>
</android.support.design.card.MaterialCardView>