        android:layout_marginTop="8dp"
        android:src="@drawable/ic_collections"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="Galeriden Seç"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_fragment_fotoyukle"
        app:layout_constraintStart_toEndOf="@+id/btn_fragment_fotoyukle"
        app:layout_constraintTop_toTopOf="@+id/btn_fragment_fotoyukle" />
</android.support.constraint.ConstraintLayout>