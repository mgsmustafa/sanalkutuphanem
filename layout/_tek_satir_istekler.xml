<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">
        <TextView
            android:id="@+id/lbl_teksatir_istekler_baslik"
            android:layout_width="338dp"
            android:layout_height="39dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:inputType="textMultiLine"
            android:maxLength="80"
            android:text="Başlık"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tek_satir_istekler_kapak" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="240dp"
            android:layout_height="49dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:text="Paylaşma isteğini cevabınız?"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/tek_satir_istekler_kapak"
            android:layout_width="99dp"
            android:layout_height="101dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintEnd_toStartOf="@+id/textView6"
            app:layout_constraintHorizontal_bias="0.301"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/loading" />
        <ImageView
            android:id="@+id/btn_teksatirlik_istekler_onay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:tint="@color/colorPrimaryDark"
            app:layout_constraintEnd_toStartOf="@+id/btn_teksatir_istekler_vazgec"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tek_satir_istekler_kapak"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:srcCompat="@drawable/ic_check" />
        <ImageView
            android:id="@+id/btn_teksatir_istekler_vazgec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:tint="@color/colorRed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_teksatirlik_istekler_onay"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:srcCompat="@drawable/ic_cancel" />
        <TextView
            android:id="@+id/lbl_teksatir_istek_kayityok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Size ait bir istek bulunamadı..."
            android:textColor="@color/colorRed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="invisible" />
        <TextView
            android:id="@+id/tasd23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Talepte Bulunan Kullanıcı Bilgileri"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="@+id/lbl_teksatir_istekler_baslik"
            app:layout_constraintTop_toBottomOf="@+id/lbl_teksatir_istekler_baslik" />
        <TextView
            android:id="@+id/lbl_teksatir_istekler_kuladi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/tasd23"
            app:layout_constraintTop_toBottomOf="@+id/tasd23" />
        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/tasd23"
            app:layout_constraintTop_toBottomOf="@+id/tasd23" />
        <TextView
            android:id="@+id/lbl_teksatir_istekler_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorRed"
            app:layout_constraintStart_toEndOf="@+id/lbl_teksatir_istekler_kuladi"
            app:layout_constraintTop_toBottomOf="@+id/tasd23" />
    </android.support.constraint.ConstraintLayout>
</android.support.design.card.MaterialCardView>